<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <!--    &lt;!&ndash; Top Section &ndash;&gt;-->
    <!--        <LinearLayout-->
    <!--            android:layout_width="match_parent"-->
    <!--            android:layout_height="match_parent"-->
    <!--            android:orientation="vertical">-->


    <!-- Scrollable Content -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:fillViewport="true"
        android:background="#1A1A1D">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none"
            android:orientation="vertical">


            <!-- Profile Wallpaper -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="147.5dp"
                android:src="@drawable/default_wallpaper_pfp"/>

            <!-- Profile Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="#1A1A1D">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/main_profile_image"
                    android:layout_width="75dp"
                    android:layout_height="75dp"
                    android:layout_margin="16dp"
                    android:src="@drawable/profile_circle"
                    app:civ_border_width="2dp"
                    app:civ_border_color="@color/gray" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/profile_name_textview"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Username"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:textColor="@color/white"
                        android:layout_marginBottom="16dp"/>

                </LinearLayout>
            </LinearLayout>

            <!-- Bio Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#1A1A1D"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:id="@+id/profile_bio_textview"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:text="Your bio goes here..."
                    android:textAlignment="center"
                    android:layout_gravity="center"
                    android:layout_marginBottom="10dp"/>

                <!-- Edit Profile Button removed from here -->

            </LinearLayout>

            <!-- Profile Details -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="462dp"
                android:layout_margin="5dp"
                android:background="#26262c"
                android:orientation="vertical"
                android:padding="10dp">

                <!-- Tabs -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/mydetails"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="My Details"
                        android:textColor="#D3D3D3"
                        android:layout_marginRight="1dp"/>

                    <Button
                        android:id="@+id/myanimestat"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Anime"
                        android:textColor="#D3D3D3"
                        android:layout_marginLeft="1dp"/>
                </LinearLayout>

                <FrameLayout
                    android:id="@+id/fragmentContainer2"
                    android:layout_width="match_parent"
                    android:layout_height="375dp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

    <FrameLayout
        android:id="@+id/overlay_container"
        android:elevation="8dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</FrameLayout>