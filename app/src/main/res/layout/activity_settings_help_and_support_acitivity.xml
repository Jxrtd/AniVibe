<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SettingsHelpAndSupportAcitivity"
    android:orientation="vertical"
    android:background="#1A1A1D">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Updated header layout to match Edit Profile -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <ImageButton
                android:id="@+id/devbackbutton"
                android:layout_gravity="center"
                android:layout_width="25dp"
                android:layout_marginStart="10dp"
                android:layout_height="25dp"
                android:src="@drawable/arrow_left_icon"
                android:scaleType="fitCenter"
                android:background="#1D1616"/>

            <TextView
                android:id="@+id/title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Help and Support"
                android:fontFamily="sans-serif-condensed"
                android:textAlignment="center"
                android:textSize="23sp"
                android:textColor="#d3d3d3"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"></View>
        </LinearLayout>


        <!-- Enhanced ListView with divider and padding -->
        <ListView
            android:id="@+id/lvHelpAndSupport"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#232326"
            android:divider="#2E2E32"
            android:dividerHeight="1dp"
            android:paddingVertical="8dp"
            android:clipToPadding="false"
            android:scrollbarStyle="outsideOverlay"/>
    </LinearLayout>
</LinearLayout>