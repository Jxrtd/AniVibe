<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#1A1A1D">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Top navigation bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal"
            android:layout_margin="10dp">

            <ImageButton
                android:id="@+id/backButton"
                android:layout_gravity="center"
                android:layout_width="25dp"
                android:layout_marginStart="10dp"
                android:layout_height="25dp"
                android:src="@drawable/arrow_left_icon"
                android:scaleType="fitCenter"
                android:background="#1D1616"/>

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Edit Anime Stats"
                android:fontFamily="sans-serif-condensed"
                android:textAlignment="center"
                android:textSize="23sp"
                android:textColor="#d3d3d3"
                android:textStyle="bold"
                android:layout_gravity="center"/>

            <View
                android:layout_width="40dp"
                android:layout_height="40dp"></View>
        </LinearLayout>

        <!-- Card for anime preferences section -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="#232326"
            android:layout_marginTop="12dp"
            android:padding="16dp">

            <!-- Favorite Anime Section -->
            <TextView
                android:id="@+id/label_favorite_anime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Favorite Anime"
                android:fontFamily="sans-serif-condensed"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#c6c6c6"/>

            <EditText
                android:id="@+id/input_favorite_anime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your favorite anime"
                android:fontFamily="sans-serif-condensed"
                android:inputType="text"
                android:textColor="#c6c6c6"
                android:textColorHint="#80c6c6c6"
                android:backgroundTint="#c6c6c6"
                android:layout_marginBottom="16dp"/>

            <!-- Favorite Genre Section -->

            <TextView
                android:id="@+id/label_favorite_genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Favorite Genre"
                android:textColor="#c6c6c6"
                android:fontFamily="sans-serif-condensed"
                android:textSize="20sp"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/input_favorite_genre"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your favorite genre"
                android:fontFamily="sans-serif-condensed"
                android:inputType="text"
                android:textColor="#c6c6c6"
                android:textColorHint="#80c6c6c6"
                android:backgroundTint="#c6c6c6"
                android:layout_marginBottom="16dp"/>

            <!-- Favorite Character Section -->
            <TextView
                android:id="@+id/label_favorite_character"
                android:fontFamily="sans-serif-condensed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Favorite Character"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#c6c6c6"/>

            <EditText
                android:id="@+id/input_favorite_character"
                android:fontFamily="sans-serif-condensed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter your favorite character"
                android:inputType="text"
                android:textColor="#c6c6c6"
                android:textColorHint="#80c6c6c6"
                android:backgroundTint="#c6c6c6"
                android:layout_marginBottom="16dp"/>

            <!-- Top Recommendations Section -->
            <TextView
                android:id="@+id/label_top_recommendations"
                android:fontFamily="sans-serif-condensed"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Top Anime Recommendations"
                android:textStyle="bold"
                android:textSize="20sp"
                android:textColor="#c6c6c6"/>

            <!-- First Recommendation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1."
                    android:textColor="#c6c6c6"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical"/>

                <EditText
                    android:id="@+id/input_recommendation_1"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="First recommendation"
                    android:inputType="text"
                    android:textColor="#c6c6c6"
                    android:textColorHint="#80c6c6c6"
                    android:backgroundTint="#c6c6c6"/>
            </LinearLayout>

            <!-- Second Recommendation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2."
                    android:textColor="#c6c6c6"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical"/>

                <EditText
                    android:id="@+id/input_recommendation_2"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Second recommendation"
                    android:inputType="text"
                    android:textColor="#c6c6c6"
                    android:textColorHint="#80c6c6c6"
                    android:backgroundTint="#c6c6c6"/>
            </LinearLayout>

            <!-- Third Recommendation -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3."
                    android:textColor="#c6c6c6"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginEnd="8dp"
                    android:layout_gravity="center_vertical"/>

                <EditText
                    android:id="@+id/input_recommendation_3"
                    android:fontFamily="sans-serif-condensed"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Third recommendation"
                    android:inputType="text"
                    android:textColor="#c6c6c6"
                    android:textColorHint="#80c6c6c6"
                    android:backgroundTint="#c6c6c6"/>
            </LinearLayout>

            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/button_save"
                android:text="Save"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textStyle="bold"
                android:padding="10dp"
                android:textColor="@android:color/white"
                app:backgroundTint="@android:color/holo_red_dark"/>

        </LinearLayout>
    </LinearLayout>
</ScrollView>