<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Base application theme. -->
    <style name="Theme.Anivibe" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- primary brand colors -->
        <!--        <item name="colorPrimary">@color/ed2f2f</item>-->
        <!--        <item name="colorPrimaryVariant">@color/ed2f2f</item>-->
        <!--        <item name="colorOnPrimary">@color/white</item>-->
        <!-- your other theming items -->
